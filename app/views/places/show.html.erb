<h1><%= @place.name %></h1>

<h2>My Entries</h2>
<div class="row">
  <% @entries.each do |entry| %>
    <div class="col-md-4">
      <div class="card mb-3">
        <div class="card-body">
          <h3 class="card-title"><%= entry.title %></h3>
          <h4 class="card-subtitle mb-2 text-muted"><%= entry.occurred_on %></h4>
          <p class="card-text"><%= entry.description %></p>
          <% if entry.image.attached? %>
            <img src="<%= url_for(entry.image) %>" class="img-fluid">
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<p>
  <%= link_to 'New Entry', new_entry_path(place_id: @place.id), class: 'btn btn-primary' %>
</p>

<p>
  <%= link_to 'Back to All Places', places_path, class: 'btn btn-secondary' %>
</p>
